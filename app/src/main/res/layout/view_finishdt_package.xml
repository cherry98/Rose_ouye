<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/finish_task_bg1"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/viewfdt_package_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/finish_task_bg_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/task_package"/>

        <TextView
            android:id="@+id/viewfdt_package"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="#ff231916"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/viewfdt_package_right"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/text_spread"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewfdt_package_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/viewfdt_package_note_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/finish_task_bg2"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="#ff231916"
            android:textSize="12sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/viewfdt_package_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"
            android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>