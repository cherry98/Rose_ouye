<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/itemalltask_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemalltask_img"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_weight="0.8"
            android:scaleType="fitCenter"
            android:src="@mipmap/itemcorps_task1" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/alltask_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemalltask_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/homepage_city"
                    android:textSize="14sp" />

                <!-- <TextView
                     android:id="@+id/itemalltask_money"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginRight="10dp"
                     android:text="¥50-80"
                     android:textColor="@color/homepage_select"
                     android:textSize="@dimen/app_textsize_normal"
                     android:visibility="gone" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemalltask_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/homepage_notselect"
                        android:textSize="@dimen/app_textsize_small" />

                    <TextView
                        android:id="@+id/itemalltask_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/homepage_notselect"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemalltask_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/dialog_upload3"
                        android:paddingBottom="4dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="4dp"
                        android:text="预览"
                        android:textColor="@color/homepage_select"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/itemalltask_check1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/dialog_upload8"
                        android:paddingBottom="4dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="4dp"
                        android:text="预览"
                        android:textColor="@color/homepage_notselect"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/itemalltask_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/apply_background"
                        android:paddingBottom="4dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="4dp"
                        android:text="立即申请"
                        android:textColor="@color/app_background2"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/itemalltask_img2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"
            android:src="@mipmap/sy_yqw_bj"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/itemalltask_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/itemalltask_url"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginRight="10dp"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundedCornerRadius="14dp"
                fresco:roundingBorderColor="@color/homepage_select"
                fresco:roundingBorderWidth="1dp" />

            <ImageView
                android:id="@+id/itemalltask_top"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@mipmap/sy_button_hbt"
                android:visibility="gone" />

            <TextView
                android:id="@+id/itemalltask_money"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="top|center"
                android:paddingTop="5dp"
                android:text="¥50-80"
                android:textColor="#FFFFFFFF"
                android:textSize="12dp" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>