<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipemenulib"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="1dp">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itemcorpsnotice_bg1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@mipmap/projectname2" />

            <TextView
                android:id="@+id/applytag_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:text="盒马超人"
                android:textColor="@color/homepage_city"
                android:textSize="@dimen/app_textsize_normal1" />

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@mipmap/grrw_icon_hb" />

            <LinearLayout
                android:id="@+id/lin_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#f13839"
                    android:textSize="@dimen/app_textsize_small" />

                <TextView
                    android:id="@+id/itemapplyone_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:textColor="#f13839"
                    android:textSize="@dimen/app_textsize_normal" />

                <TextView
                    android:id="@+id/itemapplyone_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#737373"
                    android:textSize="@dimen/app_textsize_small"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alltask_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/itemapplyone_lay1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/itemmyreward_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/taskdetail_list_ico2" />

                <TextView
                    android:id="@+id/itemapplyone_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="北京汇星行"
                    android:textColor="#535353"
                    android:textSize="@dimen/app_textsize_small" />
            </LinearLayout>

            <TextView
                android:id="@+id/itemapplyone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S1SJ1198"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemapplyone_addr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="北京市丰台区西四环中路83号"
                    android:textColor="@color/homepage_notselect"
                    android:textSize="@dimen/app_textsize_small"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/itemapplyone_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/dialog_upload3"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="分享到广场"
                    android:textColor="@color/dialog_upload3"
                    android:textSize="@dimen/app_textsize_small3"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/itemapplyone_runnow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dialog_upload1"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="立即执行"
                    android:textColor="@color/app_background2"
                    android:textSize="@dimen/app_textsize_small3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemapplyone_time_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/itemapplyone_looktime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="2018-01-22 09:00 ~ 2018-02-02 09:00"
                    android:textColor="@color/homepage_notselect"
                    android:textSize="@dimen/app_textsize_small3" />

                <TextView
                    android:id="@+id/itemapplyone_overtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="02:59:59"
                    android:textColor="@color/makesure"
                    android:textSize="@dimen/app_textsize_small3"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btnDelete"
        android:layout_width="@dimen/task_del_width"
        android:layout_height="match_parent"
        android:background="@drawable/itemcorpsnotice_delete"
        android:gravity="center"
        android:text="放弃"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</LinearLayout>
