                </LinearLayout>

                <View
                    android:id="@+id/lin_attestation_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffececec" />

                <LinearLayout
                    android:id="@+id/lin_TeamMembers"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
