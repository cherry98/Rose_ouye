<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.orange.oy.view.AppTitle
        android:id="@+id/rankingdetail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/itemalltask_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rankingdetail_ranking"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_circel_col_d8d8d8"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/app_background2"
            android:textSize="@dimen/app_textsize_normal1"
            android:visibility="invisible"/>

        <com.orange.oy.view.CircularImageView
            android:id="@+id/rankingdetail_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/rankingdetail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="用户昵称"
            android:textColor="@color/homepage_city"
            android:textSize="@dimen/app_textsize_normal1"/>
    </LinearLayout>

    <GridView
        android:id="@+id/rankingdetail_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:verticalSpacing="10dp"/>
</LinearLayout>
