<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/itemalltask_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/taskdetail_list_ico2" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/mycorps_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemnoprice_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="北京汇星行"
                        android:textColor="@color/homepage_city"
                        android:textSize="@dimen/app_textsize_normal1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/itemnoprice_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="3"
                        android:text="自己"
                        android:textColor="#4A90E2"
                        android:textSize="@dimen/app_textsize_small" />

                    <TextView
                        android:id="@+id/itemnoprice_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@mipmap/grrw_icon_tab"
                        android:text="待执行"
                        android:textColor="@color/homepage_select"
                        android:textSize="@dimen/app_textsize_small" />
                </LinearLayout>

                <TextView
                    android:id="@+id/itemnoprice_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="S1SJ1198"
                    android:textColor="@color/homepage_notselect"
                    android:textSize="@dimen/app_textsize_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemnoprice_addr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="北京市丰台区西四环中路83号"
                        android:textColor="@color/homepage_notselect"
                        android:textSize="@dimen/app_textsize_small" />

                    <TextView
                        android:id="@+id/itemnoprice_dis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/dialog_upload3"
                        android:paddingBottom="4dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="4dp"
                        android:text="分配"
                        android:textColor="@color/homepage_select"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/itemnoprice_carrytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="01-22 09:00 ~ 02-02 09:00可执行"
                    android:textColor="@color/homepage_notselect"
                    android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>