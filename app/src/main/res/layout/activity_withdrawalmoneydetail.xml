<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background2"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">

    <com.orange.oy.view.AppTitle
        android:id="@+id/apptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/withdrawlmoneyitem_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/zfb_ico"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/txmx_icon_zfb"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/zfb_ico"
            android:gravity="center_vertical"
            android:text="支付宝提现"
            android:textColor="#ff231916"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textColor="#ffF65D57"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:textColor="#ff231916"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zfb_ico"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/code"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/realmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tax"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/realmoney"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/money"
            android:singleLine="true"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/creattime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/creattime"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="好友认证审核期3天"
            android:textColor="#ffF65D57"
            android:textSize="12sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/wmd_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:divider="@null"
        android:listSelector="@android:color/transparent"/>
</LinearLayout>