<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background2"
    android:orientation="vertical">

    <com.orange.oy.view.AppTitle
        android:id="@+id/drawprize_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/alltask_background" />

            <ImageView
                android:id="@+id/drawprize_img"
                android:layout_width="347dp"
                android:layout_height="347dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/dingwei" />

            <TextView
                android:id="@+id/drawprize_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="价值100元的平谷仙桃一箱x12个"
                android:textColor="@color/homepage_select"
                android:textSize="@dimen/app_textsize_normal2"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="接收礼品地址"
                    android:textColor="@color/homepage_city"
                    android:textSize="@dimen/app_textsize_normal1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/drawprize_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dialog_upload3"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="选择收获地址"
                    android:textColor="@color/homepage_select"
                    android:textSize="10sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/drawprize_name"
                android:layout_width="260dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/itemalltask_background"
                android:hint="请输入姓名"
                android:paddingLeft="10dp"
                android:textColor="@color/homepage_notselect"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/drawprize_phone"
                android:layout_width="260dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/itemalltask_background"
                android:hint="请输入手机号"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="@color/homepage_notselect"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/drawprize_province"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/itemalltask_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="省份"
                    android:textColor="@color/homepage_notselect"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/drawprize_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/itemalltask_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="城市"
                    android:textColor="@color/homepage_notselect"
                    android:textSize="13sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/drawprize_addr"
                android:layout_width="260dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/itemalltask_background"
                android:hint="请输入详细地址"
                android:paddingLeft="10dp"
                android:textColor="@color/homepage_notselect"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/drawprize_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/identitysure"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/app_background2"
        android:textSize="@dimen/app_textsize_normal2" />
</LinearLayout>
