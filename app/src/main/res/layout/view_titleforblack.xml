<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleforblack_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ff393a3f"
    android:orientation="horizontal">

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_above="@+id/titleforblack_back"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:background="#ff303135"/>-->

    <LinearLayout
        android:id="@+id/titleforblack_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/fwx_5" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#ff2e2e32" />
    </LinearLayout>

    <TextView
        android:id="@+id/titleforblack_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/titleforblack_search"
        android:layout_toRightOf="@+id/titleforblack_back"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:singleLine="true"
        android:text="小菜鸡"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/titleforblack_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="13dp"
        android:paddingRight="16dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/fwx_4"
        android:visibility="visible" />
</RelativeLayout>