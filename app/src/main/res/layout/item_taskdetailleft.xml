<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/app_background2"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/taskdetail_list_left_ico"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingRight="15dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_taskdetail_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="店铺编号 店铺名称"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/app_textsize_big"/>

                <TextView
                    android:id="@+id/item_taskdetail_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/taskdetail_button"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="换人"
                    android:textColor="#ffffffff"/>

                <TextView
                    android:id="@+id/item_taskdetail_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/taskdetail_button"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="执行"
                    android:textColor="#ffffffff"/>
            </LinearLayout>


            <TextView
                android:id="@+id/item_taskdetail_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:text="详细地址"
                android:textColor="@color/myteam_search_text"
                android:textSize="@dimen/app_textsize_normal"/>

            <TextView
                android:id="@+id/item_taskdetail_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:text="访员账号"
                android:textColor="@color/myteam_search_text"
                android:textSize="@dimen/app_textsize_normal"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/item_taskdetail_looktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_taskdetail_offline"
            android:textColor="@color/myteam_search_text"
            android:textSize="@dimen/app_textsize_big"/>

        <TextView
            android:id="@+id/item_taskdetail_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="离线下载"
            android:textColor="#ff0000ff"
            android:textSize="@dimen/app_textsize_big"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_line"/>
</LinearLayout>