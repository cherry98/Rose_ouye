<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemimage_check"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/image_uncheck"
        android:visibility="gone" />

    <com.orange.oy.view.MyImageView
        android:id="@+id/itemimage_img2"
        android:layout_width="108dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/taskitemshot_shot_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/taskitemshotill_start_bg"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/taskitemshotill_start" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/cjzd_button_x"
        android:visibility="gone" />
</FrameLayout>