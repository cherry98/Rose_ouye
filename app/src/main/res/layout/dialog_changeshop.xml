<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dialog_closetask_height"
              android:background="@color/colorPrimaryDark2"
              android:minHeight="@dimen/dialog_closetask_height"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="选择店铺"
            android:textColor="#ff12cdb8"
            android:textSize="@dimen/app_textsize_normal"/>

        <ImageView
            android:id="@+id/closetask_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/x"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ff12cdb8"/>

    <ListView
        android:id="@+id/changeshop_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#ff12cdb8"
        android:dividerHeight="2dp"
        android:listSelector="@android:color/transparent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ff12cdb8"/>
</LinearLayout>