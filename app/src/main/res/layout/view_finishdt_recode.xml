<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/app_background2"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/finish_task_bg1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/viewfdt_recode_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/finish_task_bg_title"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/take_tape"/>

            <TextView
                android:id="@+id/viewfdt_recode_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="#ff231916"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/viewfdt_recode_reset"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/taskitemlist_button"
                android:gravity="center"
                android:text="重做"
                android:textColor="#ffffffff"
                android:textSize="@dimen/app_textsize_normal"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/viewfdt_recode_progressvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="#ffF65D57"
                android:textSize="14sp"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/text_spread"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/viewfdt_recode_progress"
            style="@style/ProgressBar_Mini"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center_vertical"
            android:max="100"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/viewfdt_recode_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewfdt_recode_note_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/finish_task_bg2"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="#ff231916"
            android:textSize="12sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/viewfdt_recode_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"
            android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>