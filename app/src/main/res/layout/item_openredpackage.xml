<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemopenpackage_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemopenpackage_type1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="fffff"
            android:textColor="@color/homepage_city"
            android:textSize="@dimen/app_textsize_normal" />

        <TextView
            android:id="@+id/itemopenpackage_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已收入您的红包箱"
            android:textColor="#C87F43"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemopenpackage_ly2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:minHeight="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemopenpackage_seller"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="已领取“方家铺子”随机红包"
            android:textColor="@color/homepage_notselect"
            android:textSize="@dimen/app_textsize_normal1" />

        <TextView
            android:id="@+id/itemopenpackage_price"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="¥200"
            android:textColor="@color/app_background2"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>