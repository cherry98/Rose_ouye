<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/itemrecommendep_img"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/itemrecommendep_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/itemrecommendep_img"
        android:text="店铺名称" />

    <TextView
        android:id="@+id/itemrecommendep_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemrecommendep_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/itemrecommendep_img"
        android:text="店铺地址" />

    <TextView
        android:id="@+id/itemrecommendep_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemrecommendep_addr"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/itemrecommendep_img"
        android:text="距离" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/itemrecommendep_addr"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奖励金" />

        <TextView
            android:id="@+id/itemrecommendep_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="@color/makesure" />

        <TextView
            android:id="@+id/itemrecommendep_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元" />
    </LinearLayout>
</RelativeLayout>