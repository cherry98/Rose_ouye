<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_upload"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="获取更多优惠"
            android:textColor="@color/homepage_city"
            android:textSize="@dimen/app_textsize_normal2" />

        <ImageView
            android:id="@+id/dialogobtain_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/close_dialog" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mycorps_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="提示：为了您的资金安全，大额支付请留下联系方式，我们的客服人员会尽快与您联系。"
        android:textColor="#333333"
        android:textSize="@dimen/app_textsize_normal1" />

    <EditText
        android:id="@+id/dialogobtain_edit1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/itemalltask_background"
        android:hint="请填写联系电话"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/homepage_notselect"
        android:textColorHint="@color/homepage_notselect"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/app_textsize_normal1" />

    <EditText
        android:id="@+id/dialogobtain_edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/itemalltask_background"
        android:hint="请填写您的公司名称"
        android:maxLength="30"
        android:minHeight="45dp"
        android:paddingLeft="10dp"
        android:textColor="@color/homepage_notselect"
        android:textColorHint="@color/homepage_notselect"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/app_textsize_normal1" />

    <EditText
        android:id="@+id/dialogobtain_edit3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/itemalltask_background"
        android:hint="请填写您的职位"
        android:maxLength="10"
        android:paddingLeft="10dp"
        android:textColor="@color/homepage_notselect"
        android:textColorHint="@color/homepage_notselect"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/app_textsize_normal1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dialogobtain_edit4"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@drawable/itemalltask_background"
            android:hint="称呼"
            android:maxLength="5"
            android:paddingLeft="10dp"
            android:textColor="@color/homepage_notselect"
            android:textColorHint="@color/homepage_notselect"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/app_textsize_normal1" />

        <RadioGroup
            android:id="@+id/dialogobtain_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/dialogobtain_radio1"
                style="@style/task_question_radiobuttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="先生"
                android:textColor="#818181"
                android:textSize="@dimen/app_textsize_normal1" />

            <RadioButton
                android:id="@+id/dialogobtain_radio2"
                style="@style/task_question_radiobuttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="女士"
                android:textColor="#818181"
                android:textSize="@dimen/app_textsize_normal1" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/dialogobtain_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/dialog_select"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/app_background2" />
</LinearLayout>