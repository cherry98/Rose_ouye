<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andorid="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/app_background2">

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@+id/viewtasknumbertree_right1"
        android:background="#E4E4E4"/>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/view_tasknumbertree_1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewtasknumbertree_sum_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="0"
            android:textColor="#ffF65D57"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="总量"
            android:textColor="#ffF65D57"
            android:textSize="12sp"/>
    </LinearLayout>

    <View
        android:id="@+id/viewtasknumbertree_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/viewtasknumbertree_right1"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_above="@+id/viewtasknumbertree_center"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="46dp"
        android:gravity="center"
        android:text="已通过"
        android:textColor="#A0A0A0"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/viewtasknumbertree_right1_num"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/viewtasknumbertree_right1"
        android:layout_marginLeft="-41dp"
        android:layout_toRightOf="@+id/viewtasknumbertree_right1"
        android:gravity="center"
        android:text="0"
        android:textColor="#A0A0A0"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/viewtasknumbertree_right2"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/viewtasknumbertree_center"
        android:layout_marginRight="46dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="未通过"
        android:textColor="#A0A0A0"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/viewtasknumbertree_right2_num"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/viewtasknumbertree_right2"
        android:layout_marginLeft="-41dp"
        android:layout_toRightOf="@+id/viewtasknumbertree_right2"
        android:gravity="center"
        android:text="0"
        android:textColor="#A0A0A0"
        android:textSize="16sp"/>

    <View
        android:id="@+id/viewtasknumbertree_line1"
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/point_6"
        android:layout_alignTop="@+id/point_5"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="11dp"
        android:layout_toLeftOf="@+id/viewtasknumbertree_right1"
        android:background="#E4E4E4"/>

    <ImageView
        android:id="@+id/point_5"
        android:layout_width="15dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/viewtasknumbertree_right1"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/viewtasknumbertree_right1"
        android:scaleType="fitCenter"
        android:src="@mipmap/view_tasknumbertree_3"/>

    <ImageView
        android:id="@+id/point_6"
        android:layout_width="15dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/viewtasknumbertree_right2"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/viewtasknumbertree_right2"
        android:scaleType="fitCenter"
        android:src="@mipmap/view_tasknumbertree_3"/>

    <android.support.percent.PercentRelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_toLeftOf="@+id/viewtasknumbertree_line1">

        <TextView
            android:id="@+id/point_1_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/point_1"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#A0A0A0"
            android:textSize="16sp"
            app:layout_widthPercent="25%"/>

        <TextView
            android:id="@+id/point_1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point_1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="待分配"
            android:textColor="#A0A0A0"
            android:textSize="12sp"
            app:layout_widthPercent="25%"/>

        <ImageView
            android:id="@+id/point_1"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:scaleType="fitCenter"
            andorid:src="@mipmap/view_tasknumbertree_3"
            app:layout_widthPercent="25%"
            android:layout_below="@+id/point_2_num"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/point_2_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/point_2"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/point_1"
            android:gravity="center"
            android:text="0"
            android:textColor="#A0A0A0"
            android:textSize="16sp"
            app:layout_widthPercent="25%"/>

        <TextView
            android:id="@+id/point_2_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point_2"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/point_1"
            android:gravity="center"
            android:text="待执行"
            android:textColor="#A0A0A0"
            android:textSize="12sp"
            app:layout_widthPercent="25%"/>

        <ImageView
            android:id="@+id/point_2"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/point_1"
            android:scaleType="fitCenter"
            andorid:src="@mipmap/view_tasknumbertree_3"
            app:layout_widthPercent="25%"/>

        <TextView
            android:id="@+id/point_3_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/point_1"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/point_2"
            android:gravity="center"
            android:text="0"
            android:textColor="#A0A0A0"
            android:textSize="16sp"
            app:layout_widthPercent="25%"/>

        <TextView
            android:id="@+id/point_3_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point_1"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/point_2"
            android:gravity="center"
            android:text="执行中"
            android:textColor="#A0A0A0"
            android:textSize="12sp"
            app:layout_widthPercent="25%"/>

        <ImageView
            android:id="@+id/point_3"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/point_2"
            android:scaleType="fitCenter"
            andorid:src="@mipmap/view_tasknumbertree_3"
            app:layout_widthPercent="25%"/>

        <TextView
            android:id="@+id/point_4_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/point_1"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/point_3"
            android:gravity="center"
            android:text="0"
            android:textColor="#A0A0A0"
            android:textSize="16sp"
            app:layout_widthPercent="25%"/>

        <TextView
            android:id="@+id/point_4_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point_1"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/point_3"
            android:gravity="center"
            android:text="审核中"
            android:textColor="#A0A0A0"
            android:textSize="12sp"
            app:layout_widthPercent="25%"/>

        <ImageView
            android:id="@+id/point_4"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/point_3"
            android:scaleType="fitCenter"
            andorid:src="@mipmap/view_tasknumbertree_3"
            app:layout_widthPercent="25%"/>
    </android.support.percent.PercentRelativeLayout>
</RelativeLayout>