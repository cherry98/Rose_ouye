<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_upload4"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tv_bianhao_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="店铺编号:"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_normal1" />

            <TextView
                android:id="@+id/tv_bianhao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="sxsac"
                android:textColor="@color/homepage_city"
                android:textSize="@dimen/app_textsize_normal1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_name_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="店铺名称:"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_normal1" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="sxsac"
                android:textColor="@color/homepage_city"
                android:textSize="@dimen/app_textsize_normal1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_address_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="店铺地址:"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_normal1" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="sxsac"
                android:textColor="@color/homepage_city"
                android:textSize="@dimen/app_textsize_normal1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="GPS坐标:"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_normal1" />

            <TextView
                android:id="@+id/tv_gps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="sxsac"
                android:textColor="@color/homepage_city"
                android:textSize="@dimen/app_textsize_normal1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="坐标地址:"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_normal1" />

            <TextView
                android:id="@+id/tv_getaddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="sxsac"
                android:textColor="@color/homepage_city"
                android:textSize="@dimen/app_textsize_normal1" />
        </LinearLayout>

        <TextView
            android:id="@+id/confirm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal|left"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#4e4e4e"
            android:textSize="@dimen/app_textsize_normal1"
            android:visibility="gone" />


        <TextView
            android:id="@+id/confirm_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal|bottom"
            android:lineSpacingExtra="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#707070"
            android:textSize="@dimen/app_textsize_normal1"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:background="#F3F3F3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dialog_upload"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/confirm_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_confirm_no"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_normal2" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="#F3F3F3" />

            <TextView
                android:id="@+id/confirm_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_confirm_yes"
                android:textColor="@color/homepage_select"
                android:textSize="@dimen/app_textsize_normal2" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>