<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="130dp"
              android:minHeight="130dp"
              android:orientation="horizontal"
              android:paddingTop="10dp">

    <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@drawable/task_item_left"/>

    <ImageView
        android:layout_width="47dp"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:paddingLeft="15dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/task_item_ico"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/task_item_right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_task_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:textColor="#ff868686"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/app_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="5"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_task_item2_ico"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/task_item_bottom_2"/>

            <TextView
                android:id="@+id/item_task_item2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:text="@string/task_list_item2"
                android:textColor="@color/colorPrimaryDark2"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/item_task_item1_ico"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/task_item_bottom_1"/>

            <TextView
                android:id="@+id/item_task_item1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:text="@string/task_list_item1"
                android:textColor="@color/colorPrimaryDark2"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>