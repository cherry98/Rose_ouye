<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_taskitem_recodillustrate_reset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background2"
    android:orientation="vertical"
    tools:context="com.orange.oy.activity.TaskitemRecodResetActivity">

    <com.orange.oy.view.AppTitle
        android:id="@+id/taskitemrecod_reset_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskitemrecod_reset_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="录音任务"
                android:textColor="@color/homepage_city"
                android:textSize="@dimen/app_textsize_normal2" />

            <com.orange.oy.view.SpreadTextView
                android:id="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"></com.orange.oy.view.SpreadTextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/alltask_background" />

            <com.orange.oy.view.MyListView
                android:id="@+id/list_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none"></com.orange.oy.view.MyListView>

            <TextView
                android:id="@+id/taskitemrecod_reset_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/unify_input"
                android:gravity="top|left"
                android:minHeight="70dp"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_small" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
