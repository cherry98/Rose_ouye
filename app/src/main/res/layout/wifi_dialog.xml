<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_20"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/dialog_bg"
        >
        <ImageView
            android:id="@+id/img_close_dialog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/zmer_close_dialog_selector"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/text_connect_wifi_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSID："
            android:textColor="@color/gray_11"
            android:textSize="@dimen/text_size_large"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:id="@+id/text_connect_wifi_ssidinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_11"
            android:textSize="@dimen/text_size_large"
            android:layout_marginTop="60dp"
            android:text="ddfs"
            android:layout_toRightOf="@id/text_connect_wifi_ssid"
            />
        <TextView
            android:id="@+id/text_connect_wifi_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_11"
            android:textSize="@dimen/text_size_large"
            android:layout_marginTop="30dp"
            android:text="密码："
            android:layout_marginLeft="50dp"
            android:layout_below="@id/text_connect_wifi_ssid"
            />
        <EditText
            android:id="@+id/text_connect_wifi_psdinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_11"
            android:textSize="@dimen/text_size_large"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/text_connect_wifi_ssid"
            android:layout_below="@id/text_connect_wifi_ssid"
            android:background="@null"
            android:layout_marginRight="50dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_16"
            android:layout_below="@id/text_connect_wifi_psd"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:id="@+id/btn_begin_connnect_wifi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/zmer_connect_wifi_btn_selector"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            />
    </RelativeLayout>

</RelativeLayout>
