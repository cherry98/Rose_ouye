<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background2"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/alltask_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/citysearch2_tv_addr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/home_icon_weizhi"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="安定区  黑龙江省"
            android:textColor="#231916"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/citysearch2_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在定位......"
            android:textColor="#717171"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/citysearch2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/citysearch2_name"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/citysearch_bg"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="城市"
                android:textColor="@color/citysearch_text"
                android:textSize="@dimen/app_textsize_normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/citysearch_bg2"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textColor="@color/citysearch_text"
                android:textSize="@dimen/app_textsize_normal"
                android:visibility="invisible" />l

            <TextView
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/citysearch_bg2"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textColor="@color/citysearch_text"
                android:textSize="@dimen/app_textsize_normal"
                android:visibility="invisible" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/citysearch_bg2"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textColor="@color/citysearch_text"
                android:textSize="@dimen/app_textsize_normal"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/alltask_background" />
</LinearLayout>