<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemcontent_move"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/itemcontent_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/itemalltask_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/itemcontent_img"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/take_photo" />

                <TextView
                    android:id="@+id/itemcontent_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="任务名称"
                    android:textColor="@color/homepage_city"
                    android:textSize="@dimen/app_textsize_normal1" />

                <TextView
                    android:id="@+id/itemcontent_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/dialog_upload8"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="编辑"
                    android:textColor="@color/homepage_notselect"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/itemcontent_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/itemcorpsnotice_delete"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/app_background2"
            android:textSize="@dimen/app_textsize_normal1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemcontent_add"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/alltask_background" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/task_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="添加"
            android:textColor="@color/homepage_notselect"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>