<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background2"
              android:orientation="vertical">

    <com.orange.oy.view.AppTitle
        android:id="@+id/checktask_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_margin="15dp"
        android:background="@drawable/bg_r_6_stroke_ffececec"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/checktask_ico"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/round_pai"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="#ececec"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/checktask_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#231916"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/checktask_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="任务起止日期："
                android:textColor="#A0A0A0"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/checktask_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="任务总金额："
                android:textColor="#A0A0A0"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ececec"/>

    <ListView
        android:id="@+id/checktask_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:scrollbars="none"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ececec"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checktask_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="不通过"
            android:textColor="#A0A0A0"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/checktask_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F65D57"
            android:gravity="center"
            android:text="通过"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>