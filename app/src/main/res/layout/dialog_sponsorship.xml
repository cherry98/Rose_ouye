<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/dialog_upload"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="赞助费！"
            android:textColor="@color/homepage_city"
            android:textSize="@dimen/app_textsize_normal2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="红包金额好少啊！求老板多发点吧！"
            android:textColor="@color/homepage_city"
            android:textSize="@dimen/app_textsize_normal1" />

        <EditText
            android:id="@+id/sponsorship_edit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/unify_input"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/homepage_city"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/dialog_select"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sponsorship_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="取消"
                android:textColor="@color/app_background2"
                android:textSize="@dimen/app_textsize_normal2" />

            <TextView
                android:id="@+id/sponsorship_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="15dp"
                android:text="支付"
                android:textColor="@color/app_background2"
                android:textSize="@dimen/app_textsize_normal2" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@mipmap/dialog_money" />
</FrameLayout>