<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/itemalltask_background"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemtaskgrab_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:src="@mipmap/taskdetail_list_ico2" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/alltask_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemtaskgrab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网点名称"
            android:textColor="@color/homepage_city"
            android:textSize="@dimen/app_textsize_normal1" />

        <TextView
            android:id="@+id/itemtaskgrab_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网点编号"
            android:textColor="@color/homepage_notselect"
            android:textSize="@dimen/app_textsize_small" />

        <TextView
            android:id="@+id/itemtaskgrab_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区建华南路"
            android:textColor="@color/homepage_notselect"
            android:textSize="@dimen/app_textsize_small" />

        <TextView
            android:id="@+id/itemtaskgrab_looktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01-22 09:~ 02-02 09:00可执行"
            android:textColor="@color/homepage_notselect"
            android:textSize="@dimen/app_textsize_small" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/item_right_lin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/rw_button_liwu"
                android:visibility="gone" />

            <TextView
                android:id="@+id/itemtaskgrab_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="¥100"
                android:textColor="@color/homepage_select"
                android:textSize="@dimen/app_textsize_normal" />
        </LinearLayout>


        <TextView
            android:id="@+id/itemtaskgrab_grab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/apply_background"
            android:paddingBottom="4dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="4dp"
            android:text="立即申请"
            android:textColor="@color/app_background2"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:scaleType="fitCenter"
        android:src="@mipmap/sy_yqw_bj"
        android:visibility="gone" />
</LinearLayout>