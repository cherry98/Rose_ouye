<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="20dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/dialog_closetask"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_photosel_item1_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_photosel_item1_img"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:scaleType="fitEnd"
                android:src="@mipmap/wode_button_gywm"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/dialog_photosel_item1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="center"
                android:text="拍照"
                android:textColor="@color/umeng_content"
                android:textSize="@dimen/app_textsize_normal2"/>
        </LinearLayout>

        <View
            android:id="@+id/dialog_photosel_item2_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"/>

        <LinearLayout
            android:id="@+id/dialog_photosel_item2_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_photosel_item2_img"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:scaleType="fitEnd"
                android:src="@mipmap/wode_button_gywm"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/dialog_photosel_item2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="center"
                android:text="临时相册"
                android:textColor="@color/umeng_content"
                android:textSize="@dimen/app_textsize_normal2"/>
        </LinearLayout>

        <View
            android:id="@+id/dialog_photosel_item3_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/dialog_photosel_item3_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/dialog_photosel_item3_img"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:scaleType="fitEnd"
                android:src="@mipmap/wode_button_gywm"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/dialog_photosel_item3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="center"
                android:text="本地相册"
                android:textColor="@color/umeng_content"
                android:textSize="@dimen/app_textsize_normal2"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_photosel_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/dialog_closetask"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/umeng_content"
        android:textSize="@dimen/app_textsize_normal2"/>
</LinearLayout>
