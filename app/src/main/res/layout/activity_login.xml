<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background2"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <com.orange.oy.view.AppTitle
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.orange.oy.view.AppTitle>

    <EditText
        android:id="@+id/login_name"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/dialog_margin"
        android:background="@drawable/itemalltask_background"
        android:hint="@string/register_hint_item1"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/homepage_notselect"
        android:textCursorDrawable="@null"
        android:textSize="13sp"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/dialog_margin"
        android:background="@drawable/itemalltask_background"
        android:hint="@string/register_hint_item2"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/homepage_notselect"
        android:textCursorDrawable="@null"
        android:textSize="13sp"/>


    <TextView
        android:id="@+id/login_button"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/dialog_margin"
        android:background="@drawable/viewdialogtasklocation1_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/app_background2"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:gravity="right|center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/login_forgetpw_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/homepage_notselect"
            android:textSize="13sp"/>
    </LinearLayout>

</LinearLayout>
