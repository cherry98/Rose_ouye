<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/withdrawlmoneyitem_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/zfb_ico"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/txmx_icon_zfb"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/zfb_ico"
            android:gravity="center_vertical"
            android:text="支付宝提现"
            android:textColor="#ff231916"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="已提现"
            android:textColor="#ffF65D57"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:text="300"
            android:textColor="#ff231916"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zfb_ico"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:text="编号"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/code"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="收税金额"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/realmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tax"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="实际到帐"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/realmoney"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/money"
            android:singleLine="true"
            android:text="支付宝账户"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/creattime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="创建时间"
            android:textColor="#ffA0A0A0"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/creattime"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="好友认证审核期3天"
            android:textColor="#ffF65D57"
            android:textSize="12sp"/>
    </RelativeLayout>
</FrameLayout>