<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/main"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background"
              android:orientation="vertical">

    <com.orange.oy.view.AppTitle
        android:id="@+id/finddetail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <WebView
        android:id="@+id/finddetail_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/finddetail_zan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/zan"/>

        <TextView
            android:id="@+id/finddetail_zan_txt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="bottom"
            android:text="(256)"
            android:textColor="@color/app_textcolor"
            android:textSize="@dimen/app_textsize_normal"/>

        <ImageView
            android:id="@+id/finddetail_cai"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/cai"/>

        <TextView
            android:id="@+id/finddetail_cai_txt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:gravity="bottom"
            android:text="(256)"
            android:textColor="@color/app_textcolor"
            android:textSize="@dimen/app_textsize_normal"/>
    </LinearLayout>
</LinearLayout>