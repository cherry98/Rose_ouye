<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/taskitemphotoY_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/view_checkreqpgnext_img"
        android:layout_width="100dp"
        android:layout_height="@dimen/taskitemphotoY_item_height"
        android:scaleType="fitXY"
        android:src="@mipmap/pzp_button_tjzp" />

    <EditText
        android:id="@+id/view_checkreqpgnext_edit"
        android:layout_width="0dp"
        android:layout_height="@dimen/taskitemphotoY_item_height"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/taskitempgnext_edittext"
        android:gravity="top|left"
        android:hint="Notes"
        android:textColor="@color/app_textcolor"
        android:textSize="15sp" />
</LinearLayout>
