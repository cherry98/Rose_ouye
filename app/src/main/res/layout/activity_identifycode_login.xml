<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background2"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <com.orange.oy.view.AppTitle
        android:id="@+id/identifycode_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/identifycode_phone1"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/dialog_margin"
        android:background="@drawable/itemalltask_background"
        android:hint="@string/register_hint_item1"
        android:inputType="number"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/homepage_notselect"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/dialog_margin"
        android:background="@drawable/itemalltask_background"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/identifycode_code"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:paddingLeft="10dp"
            android:textColor="@color/homepage_notselect"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/identifycode_obtain"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/viewdialogtasklocation1_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/app_background2"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/identifycode_next"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/dialog_margin"
        android:background="@drawable/viewdialogtasklocation1_bg"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/app_background2"
        android:textSize="13sp"/>

    <RelativeLayout
        android:id="@+id/login_frogetpassword_layout"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/calendar_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/identifycode_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码登录"
            android:textColor="@color/homepage_notselect"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/identifycode_nocode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="收不到验证码？"
            android:textColor="@color/homepage_notselect"
            android:textSize="13sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_wx_layout"
        android:layout_width="260dp"
        android:layout_height="109dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/bg_r_4_col_fff3f3f3"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:text="其他登录方式"
            android:textColor="#FFA0A0A0"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/login_wx"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/login_wx"/>
    </LinearLayout>
</LinearLayout>
