<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/app_textcolor2"
        android:textSize="@dimen/task_desc_textsize" />

    <LinearLayout
        android:id="@+id/desc_layout"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/desc_tv"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/desc_xuxian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/xuxian"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/desc_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/spread_button_down"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>