<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/itemalltask_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.orange.oy.view.CircularImageView
            android:id="@+id/itemmycorps_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/itemmycorps_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="战狼队"
            android:textColor="@color/homepage_city"
            android:textSize="@dimen/app_textsize_normal1" />

        <TextView
            android:id="@+id/itemmycorps_msg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/solid_circle"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/app_background2"
            android:textSize="@dimen/app_textsize_normal1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/itemmycorps_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="68人"
            android:textColor="@color/homepage_notselect"
            android:textSize="@dimen/app_textsize_normal1" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/aboutus_ico3" />
    </LinearLayout>
</LinearLayout>