<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_new_line"/>

    <LinearLayout
        android:id="@+id/item_taskitemdetaill_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/item_taskitemdetaill_title_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/taskitemlist_flagvv"/>

        <TextView
            android:id="@+id/item_taskitemdetaill_title_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:textColor="#ff656565"
            android:textSize="@dimen/app_textsize_normal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_taskitemdetaill_tasklayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_taskitemdetaill_ico"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/taskitemlist_flagvv"/>

        <TextView
            android:id="@+id/item_taskitemdetaill_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="#ff656565"
            android:textSize="@dimen/app_textsize_normal"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/aboutus_ico3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_taskitemdetaill_packagelayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/taskitemlist_flagvv"/>

        <TextView
            android:id="@+id/item_taskitemdetaill_package_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="#ff656565"
            android:textSize="@dimen/app_textsize_normal"/>

        <ImageView
            android:id="@+id/item_taskitemdetaill_package_switch"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/switch_off"/>
    </LinearLayout>
</LinearLayout>