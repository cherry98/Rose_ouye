<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemlistviewmyupdata_image"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="18dp"
            android:src="@mipmap/projectname" />

        <TextView
            android:id="@+id/itemlistviewmyupdata_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称项目名称项目名称项目名称项目名称"
            android:textColor="#737373"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:src="@mipmap/taskdetail_list_ico" />

        <TextView
            android:id="@+id/itemlistviewmyupdata_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="网点名称"
            android:textColor="#737373"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/itemlistviewmyupdata_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="网点编号"
            android:textColor="#a5a5a5"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/aboutus_ico3" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="27dp"
        android:background="#cccccc" />
</LinearLayout>