<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/itemmyaddr_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/itemalltask_background">

            <TextView
                android:id="@+id/itemmyaddr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="name"
                android:textColor="@color/homepage_city"
                android:textSize="@dimen/app_textsize_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemmyaddr_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/itemmyaddr_name"
                android:text="13909986699"
                android:textColor="@color/homepage_city"
                android:textSize="@dimen/app_textsize_small"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/itemmyaddr_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dialog_upload3"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="默认地址"
                android:textColor="@color/homepage_select"
                android:textSize="@dimen/app_textsize_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/itemmyaddr_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemmyaddr_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="北京市朝阳区建华南路现代柏联大厦5号楼-501"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_small" />
        </RelativeLayout>

        <TextView
            android:id="@+id/itemmyaddr_del"
            android:layout_width="@dimen/apptitle_height"
            android:layout_height="76dp"
            android:background="@drawable/itemcorpsnotice_delete"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/app_background2"
            android:textSize="@dimen/app_textsize_normal1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemmyaddr_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/itemalltask_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@mipmap/corps_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="添加新地址"
            android:textColor="@color/homepage_select"
            android:textSize="@dimen/app_textsize_normal"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>