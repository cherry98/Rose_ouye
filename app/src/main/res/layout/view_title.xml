<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/app_background2">

    <LinearLayout
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/back_button"/>

        <TextView
            android:id="@+id/title_back_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/app_back"
            android:textColor="#acacac"
            android:textSize="14sp"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/title_name_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/homepage_city"
        android:textSize="@dimen/app_textsize_normal2"/>

    <LinearLayout
        android:id="@+id/title_search_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/title_right"
        android:layout_toRightOf="@+id/title_back"
        android:background="@mipmap/search_background"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:textColor="@color/appp_titletext"
        android:visibility="gone">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/task_title_searchico"/>

        <EditText
            android:id="@+id/title_search_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:hint="@string/find_hint_search"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="#c0c0c0"
            android:textColorHint="#ffd6d6d6"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_search"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/search_baise"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/title_exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="退出"
            android:textColor="#5a5a5a"
            android:textSize="14sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/title_illustrate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:src="@mipmap/illustrate"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>