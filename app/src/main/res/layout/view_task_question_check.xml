<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffffff"
              android:orientation="vertical"
              android:paddingBottom="20dp"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/task_question_check_img"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:paddingBottom="3dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/record_required"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/task_question_check_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff231916"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_question_check_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/task_question_check_sumbit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/makesure"
        android:gravity="center"
        android:text="下一题"
        android:textColor="@color/makesure"
        android:textSize="@dimen/app_textsize_big"
        android:visibility="gone"/>
</LinearLayout>