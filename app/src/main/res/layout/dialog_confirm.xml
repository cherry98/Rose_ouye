<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="280dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/dialog_upload"
        android:orientation="vertical">

        <TextView
            android:id="@+id/confirm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:gravity="center_horizontal|bottom"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#231916"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/confirm_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|bottom"
            android:lineSpacingExtra="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#231916"
            android:textSize="14sp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/confirm_imageview"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/confirm_edittext_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="38dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/confirm_edittext"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/bg_r_3_col_fff3f3f3"
                android:gravity="left|top"
                android:paddingBottom="23dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="#A0A0A0"
                android:textColorHint="#A0A0A0"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/confirm_edittext_tip"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:text="0/200"
                android:textColor="#A0A0A0"
                android:textSize="12sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/dialog_select"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/confirm_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="@string/dialog_confirm_no"
                android:textColor="@color/app_background2"
                android:textSize="@dimen/app_textsize_normal2"/>

            <TextView
                android:id="@+id/confirm_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="15dp"
                android:text="@string/dialog_confirm_yes"
                android:textColor="@color/app_background2"
                android:textSize="@dimen/app_textsize_normal2"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/confirm_img"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@mipmap/dialogtitle_right"/>
</FrameLayout>