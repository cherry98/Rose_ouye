<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/dialog_margin"
    android:layout_marginRight="@dimen/dialog_margin"
    android:background="@drawable/dialog_upload"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/confirm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#4e4e4e"
            android:textSize="@dimen/app_textsize_normal" />

        <ImageView
            android:id="@+id/iv_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:src="@mipmap/xzyg_button_guan"
            android:visibility="gone" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:background="#F3F3F3" />

    <TextView
        android:id="@+id/itemupload_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/upload_prompt"
        android:textColor="@color/dialogupload_title"
        android:textSize="@dimen/app_textsize_normal2"
        android:visibility="gone" />

    <TextView
        android:id="@+id/itemupload_prompt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="请选择打包的划分区域……"
        android:textColor="@color/dialogupload_title"
        android:textSize="@dimen/app_textsize_normal1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/itemupload_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_upload1"
        android:gravity="center"
        android:text="存为标签"
        android:textColor="@color/app_background2"
        android:textSize="@dimen/app_textsize_normal1" />

    <TextView
        android:id="@+id/itemupload_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_upload2"
        android:gravity="center"
        android:text="忽略"
        android:textColor="@color/homepage_notselect"
        android:textSize="@dimen/app_textsize_normal1" />
</LinearLayout>