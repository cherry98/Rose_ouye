<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/itemmf_redpoint"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/myfragment_redpoint"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemmf_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/wode_button_wdtd"/>

        <TextView
            android:id="@+id/itemmf_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="我的战队"
            android:textColor="@color/homepage_notselect"
            android:textSize="@dimen/app_textsize_normal1"/>
    </LinearLayout>

    <View
        android:id="@+id/itemmf_left"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/alltask_background"
        android:visibility="gone"/>

    <View
        android:id="@+id/itemmf_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/alltask_background"
        android:visibility="gone"/>

    <View
        android:id="@+id/itemmf_right"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/alltask_background"
        android:visibility="gone"/>
</RelativeLayout>