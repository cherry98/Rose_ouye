<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_taskitem_photography_reset"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background2"
              android:orientation="vertical"
              tools:context="com.orange.oy.activity.TaskitemPhotographyResetActivity">

    <com.orange.oy.view.AppTitle
        android:id="@+id/taskitempgnexty_title_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskitempgnexty_name_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="任务名称"
                android:textColor="@color/homepage_city"
                android:textSize="@dimen/app_textsize_normal2"/>

            <TextView
                android:id="@+id/taskitempgnexty_desc_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/task_desc_textsize"/>

            <TextView
                android:id="@+id/shili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="示例:"
                android:textColor="@color/app_textcolor"
                android:textSize="@dimen/app_textsize_normal"
                android:visibility="gone"/>

            <com.orange.oy.view.MyGridView
                android:id="@+id/taskitempgnexty_gridview1_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="7dp"
                android:listSelector="#00000000"
                android:numColumns="3"
                android:verticalSpacing="10dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/spread_button_layout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/spread_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/spread_button_down"/>
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/alltask_background"/>

            <com.orange.oy.view.MyGridView
                android:id="@+id/taskitempgnexty_gridview_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="10dp"
                android:listSelector="#00000000"
                android:numColumns="3"
                android:verticalSpacing="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/homepage_notselect"/>

            <LinearLayout
                android:id="@+id/taskitempgnexty_bg2_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="5dp"
                android:listSelector="@android:color/transparent"
                android:orientation="vertical"/>

            <EditText
                android:id="@+id/taskitempgnexty_editreset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/unify_input"
                android:gravity="top|left"
                android:hint="请输入备注说明"
                android:minHeight="70dp"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_small"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/taskitempgnexty_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/identitysure"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/app_background2"
        android:textSize="@dimen/app_textsize_normal"/>
</LinearLayout>
