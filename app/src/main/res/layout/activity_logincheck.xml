<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background2"
    android:orientation="vertical">

    <com.orange.oy.view.AppTitle
        android:id="@+id/logincheck_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/logincheck_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/logincheck_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/logincheck_phone" />

        <TextView
            android:id="@+id/logincheck_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logincheck_img"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/logincheck_item1"
            android:textColor="@color/app_textcolor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/logincheck_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logincheck_item1"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="@mipmap/login_button"
            android:gravity="center"
            android:text="@string/logincheck_button1"
            android:textColor="#ffffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/logincheck_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/logincheck_item2"
                android:textColor="#646464"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/newfriends_phone"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/logincheck_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#b3a3a3a3"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:background="@color/app_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="27dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/register_ico3"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/logincheck_ch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/logincheck_item3"
                    android:singleLine="true"
                    android:textColor="#b3a3a3a3"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:background="@color/app_line" />
        </LinearLayout>

        <TextView
            android:id="@+id/logincheck_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:background="@mipmap/login_button"
            android:gravity="center"
            android:text="@string/logincheck_button2"
            android:textColor="#ffffffff"
            android:textSize="@dimen/app_textsize_big" />

        <TextView
            android:id="@+id/logincheck_button3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/logincheck_item4"
            android:textColor="#388ff1"
            android:textSize="@dimen/app_textsize_normal"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>