<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemmessage_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_r_4_col_33000000"
        android:paddingBottom="4dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="4dp"
        android:text="01-22 09:00"
        android:textColor="@color/app_background2"
        android:textSize="@dimen/app_textsize_small" />

    <LinearLayout
        android:id="@+id/itemmessage_ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_abc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/app_background2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_times"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="01-22 09: ~ 02-02 09:00可执行"
                android:textColor="@color/app_textcolor2"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/xiaoxi_button_bxhb"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_margin="7dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/xiaoxi_button_xhb" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/itemmessage_ly2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:background="@color/app_background2"
        android:visibility="gone">

        <TextView
            android:id="@+id/itemmessage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="活动主题名称"
            android:textColor="@color/homepage_city"
            android:textSize="@dimen/app_textsize_normal2" />

        <TextView
            android:id="@+id/itemmessage_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemmessage_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="“大东”对你做了评论，快去看看TA说了什么吧！"
            android:textColor="@color/homepage_notselect"
            android:textSize="@dimen/app_textsize_small" />
    </RelativeLayout>
</LinearLayout>
