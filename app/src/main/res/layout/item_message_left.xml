<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/app_background2"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_mesleft_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:minHeight="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_mesleft_select"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/message_del_no"/>

        <!--<ImageView-->
            <!--android:layout_width="25dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:src="@mipmap/message_left_ico1"/>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_mesleft_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="收到负责消息"
                android:textColor="@color/app_textcolor"
                android:textSize="@dimen/app_textsize_big"/>

            <TextView
                android:id="@+id/item_mesleft_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="收到负责消息收到负责消息收到负责消息收到负责消息"
                android:textColor="@color/myteam_search_text"
                android:textSize="@dimen/app_textsize_normal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_mesleft_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2015-09-99"
                android:textColor="@color/myteam_search_text"
                android:textSize="@dimen/app_textsize_big"/>

            <ImageView
                android:id="@+id/item_mesleft_updown"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"
                android:src="@mipmap/finishdt1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_mesleft_message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="50dp"
        android:textColor="@color/myteam_search_text"
        android:textSize="@dimen/app_textsize_normal"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_line"/>
</LinearLayout>