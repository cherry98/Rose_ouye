<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background2"
              android:orientation="vertical">

    <com.orange.oy.view.AppTitle
        android:id="@+id/issuenotice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.orange.oy.view.AppTitle>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/issuenotice_notitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/unify_input"
                android:gravity="center_vertical"
                android:hint="请填写公告标题（不超过20个字）"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_normal1"/>

            <EditText
                android:id="@+id/issuenotice_content"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/unify_input"
                android:gravity="center_vertical|top"
                android:hint="请填写公告内容（最多不超过1000个字）"
                android:maxLength="1000"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/homepage_notselect"
                android:textSize="@dimen/app_textsize_normal1"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/issuenotice_sumbit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/identitysure"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/app_background2"
        android:textSize="@dimen/app_textsize_normal2"/>
</LinearLayout>
