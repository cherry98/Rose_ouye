                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/app_background2">

                <ImageView
                    android:id="@+id/my_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/my_img_de"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/my"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/my_img"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/my_img"
                    android:text="tesetuser_20150101"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/app_textsize_normal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/my_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_name"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/my_img"
                    android:textColor="@color/app_textcolor"
                    android:textSize="@dimen/app_textsize_normal"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/my_right_ico"
                    android:layout_toRightOf="@+id/my_img"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/my_login"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/login_button"
                        android:text="@string/my_login"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/app_textsize_normal"/>
                </LinearLayout>


                <ImageView
                    android:id="@+id/my_right_ico"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/aboutus_ico3"/>
