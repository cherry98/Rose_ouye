<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/itemreceive_ly"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/itemalltask_background"
        android:padding="10dp">

        <TextView
            android:id="@+id/itemreceive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/homepage_city"
            android:textSize="@dimen/app_textsize_small" />

        <TextView
            android:id="@+id/itemreceive_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/itemreceive_name"
            android:text="13909986699"
            android:textColor="@color/homepage_city"
            android:textSize="@dimen/app_textsize_small" />

        <CheckBox
            android:id="@+id/itemreceive_check"
            style="@style/task_question_checkboxStyle1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:checked="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/itemreceive_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemreceive_name"
            android:layout_marginTop="5dp"
            android:text="[默认地址]"
            android:textColor="@color/homepage_select"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/itemreceive_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemreceive_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/itemreceive_default"
            android:text="北京市朝阳区建华南路现代柏联大厦5号楼-501"
            android:textColor="@color/homepage_notselect"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/itemreceive_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/itemalltask_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@mipmap/corps_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="添加新地址"
            android:textColor="@color/homepage_select"
            android:textSize="@dimen/app_textsize_normal"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>