<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_me"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimaryDark2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/fling_white_left_arrow_image" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dp"
            android:textColor="@color/appp_titletext"
            android:textSize="@dimen/app_textsize_normal1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_image_count"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dp"
            android:textColor="@color/appp_titletext"
            android:textSize="@dimen/app_textsize_normal1" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dp"
            android:textColor="@color/appp_titletext"
            android:textSize="@dimen/app_textsize_normal1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.orange.oy.view.iphotoviewer.PhotoViewPager
            android:id="@+id/view_pager_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark2">

            <com.orange.oy.view.photoview.PhotoView
                android:id="@+id/tv_save_image_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.orange.oy.view.iphotoviewer.PhotoViewPager>
    </LinearLayout>


</LinearLayout>